execute pathogen#infect()
execute pathogen#helptags()

" Line numbers
set number

" Syntax and colors
syntax on
filetype plugin indent on
set encoding=utf8
set fileformat=unix
set background=dark
colorscheme solarized
let g:markdown_syntax_conceal = 0

" Tabs and spaces
set expandtab
set tabstop=4
set shiftwidth=4
set autoindent
au BufNewFile,BufReadPost *.css,*.html,*.mako,*.rb,*.js,*.es,*.es6 set shiftwidth=2
au BufNewFile,BufReadPost *.css,*.html,*.mako,*.rb,*.js,*.es,*.es6 set tabstop=2
set modeline

" Map esc
:imap jk <Esc>

" Mouse scrolling nonsense
set mouse=a

" NERDTree
map <C-n> :NERDTreeToggle<CR>

" Markdown
au BufNewFile,BufRead *.md set filetype=markdown
au BufNewFile,BufRead *.es,*.es6 set filetype=javascript

" Vagrantfile
au BufNewFile,BufRead Vagrantfile set filetype=ruby

" Airline
set laststatus=2

" search
set ignorecase
set showmatch

" Completion
set completeopt=menu

" pymode
let g:pymode_folding = 0
let g:pymode_options_max_line_length = 79
let g:pymode_indent = 1
let g:pymode_lint = 1
let g:pymode_lint_cwindow = 0
let g:pymode_virtualenv = 1
let g:pymode_lint_ignore = "E501"
let g:pymode_lint_error_symbol = 'âœ—'
let g:pymode_doc = 0
let g:pymode_rope = 0

" Swap files
set backupdir=~/.vim/backup//
set directory=~/.vim/swap//
set undodir=~/.vim/undo//
